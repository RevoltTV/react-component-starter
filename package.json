{
  "name": "YOUR_COMPONENT_NAME",
  "version": "0.1.0",
  "description": "COMPONENT_DESCRIPTION",
  "main": "lib/index.js",
  "jsnext:main": "es/index.js",
  "files": [
    "dist",
    "lib",
    "es",
    "index.js"
  ],
  "scripts": {
    "build": "npm run build:commonjs && npm run build:es && npm run build:umd && npm run build:umd:min && npm run build:styles",
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src --out-dir lib",
    "build:es": "cross-env BABEL_ENV=es babel src --out-dir es",
    "build:styles": "stylus --use nib --use @revolttv/revolt-styles src/index.styl -o dist/COMPONENT_NAME.css && postcss --use autoprefixer dist/COMPONENT_NAME.css -d dist && postcss --use cssnano dist/COMPONENT_NAME.css -o dist/COMPONENT_NAME.min.css",
    "build:umd": "cross-env BABEL_ENV=commonjs NODE_ENV=development webpack src/index.js dist/COMPONENT_NAME.js",
    "build:umd:min": "cross-env BABEL_ENV=commonjs NODE_ENV=production webpack src/index.js dist/COMPONENT_NAME.min.js",
    "clean": "rimraf lib dist es coverage .tmp",
    "coverage": "babel-node ./node_modules/.bin/isparta cover _mocha -- -R spec --compilers js:babel-core/register",
    "lint": "eslint src test",
    "prepublish": "npm run clean && npm run lint && npm run test && npm run build",
    "start": "webpack-dev-server --config example/webpack.config.js --hot --inline --open",
    "test": "mocha --compilers js:babel-core/register --require ./test/bootstrap.js ./test/**/*.test.js",
    "test:watch": "npm test -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RevoltTV/react-component-starter"
  },
  "keywords": [],
  "author": "REVOLT TV <digital.engineering@revolt.tv>",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/RevoltTV/react-component-starter/issues"
  },
  "homepage": "https://github.com/RevoltTV/react-component-starter#readme",
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "babel": "^6.5.2",
    "babel-cli": "^6.7.5",
    "babel-core": "^6.7.6",
    "babel-eslint": "^6.0.2",
    "babel-loader": "^6.2.4",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-polyfill": "^6.7.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.7.2",
    "chai": "^3.5.0",
    "cross-env": "^1.0.7",
    "css-loader": "^0.23.1",
    "cssnano": "^3.5.2",
    "eslint": "^2.8.0",
    "eslint-config-revolt": "^0.1.3",
    "eslint-loader": "^1.3.0",
    "eslint-plugin-react": "^5.0.1",
    "isparta": "^4.0.0",
    "jsdom": "^9.0.0",
    "lodash": "^4.11.1",
    "mocha": "^2.4.5",
    "nib": "^1.1.0",
    "postcss-cli": "^2.5.1",
    "postcss-loader": "^0.9.1",
    "precss": "^1.4.0",
    "react": "^15.0.1",
    "react-addons-test-utils": "^15.0.1",
    "react-dom": "^15.0.1",
    "react-redux": "^4.4.5",
    "redux": "^3.4.0",
    "rimraf": "^2.5.2",
    "sinon": "^1.17.3",
    "style-loader": "^0.13.1",
    "stylus": "^0.54.2",
    "stylus-loader": "^2.0.0",
    "webpack": "^1.13.0",
    "webpack-dev-server": "^1.14.1"
  },
  "peerDependencies": {
    "lodash": "^4.11.1",
    "react": "^15.0.1",
    "react-dom": "^15.0.1",
    "react-redux": "^4.4.5",
    "redux": "^3.4.0"
  },
  "stylus": "src/index.styl",
  "dependencies": {
    "@revolttv/revolt-styles": "^0.1.0",
    "debug": "^2.2.0"
  }
}
